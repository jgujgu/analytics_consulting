<h4>
  Contact us
</h4>
<%= form_tag contact_path do -%>
  <%= hidden_field_tag :bot_catcher %>
  <div class="input-field">
    <%= email_field_tag :email, "", class: "email" %>
    <label for="email" class="cyan-text">Email</label>
  </div>
  <div class="input-field">
    <%= text_area_tag(:message, "", size: "24x6", class: "materialize-textarea") %>
    <label for="message" class="cyan-text">Message</label>
  </div>
  <%= submit_tag 'Submit', class: "btn cyan" %>
<% end -%>
<div class="map-container">
  <h4>
    <%= @address[:street] %>
    <%= @address[:city_state] %>
  </h4>
  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>
</div>
