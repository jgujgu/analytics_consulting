<div class="center-text">
  <h3>
    About Us
  </h3>
</div>
<% @bios.each do |bio| %>
  <div class="card-panel grey lighten-5 z-depth-1">
    <div class="row valign-wrapper">
      <div class="col s2">
        <%= image_tag(bio[:image], class: "responsive-img") %>
      </div>
      <div class="col s10">
        <h5 class="black-text">
          Name: <%= bio[:name] %>
        </h5>
        <h5 class="black-text">
          Education: <%= bio[:education] %>
        </h5>
        <h5 class="black-text">
          <%= bio[:description] %>
        </h5>
      </div>
    </div>
  </div>
<% end %>
